/* dialog css */
.dialog-wrapper{
  width: 100%;
  height: 100%;
  background-color: #000;
  position: fixed;
  opacity: .4;
  top: 0;
  left: 0;
  z-index: 10;
  display: block;
  transition: all ease .6s;
}
.dialog-wrapper.active{
  opacity: 0;
  display: none;
  transition: all ease .6s;
}
.dialog{
  width: 100%;
  height: 360rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 11;
  box-sizing: border-box;
  padding: 58rpx 41rpx 50rpx 47rpx;
  background-color: #fff;
  overflow: hidden;
  color: #000;
  transition: all ease .6s;
}
.dialog.active{
  top: -360rpx;
  color: #fff;
  transition: all ease .6s;
}
.dialog.active .dialog-content{
  position: relative;
  top: -300px;
  transition: all ease .1s;
}
.dialog .dialog-content{
  width: 100%;
  height: 154rpx;
  border: 1rpx solid #d9d8d8;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #000;
  box-sizing: border-box;
  padding: 20rpx 15rpx 0 ;
  position: relative;
  top: 0;
  transition: all ease .6s;
}
.dialog .dialog-edit{
  width: 100%;
  height: 50rpx;
  margin-top: 17rpx;
  display: flex;
  justify-content: space-between;
}
.dialog .dialog-edit .clock{
  width: 38rpx;
  height: 38rpx;
}
.dialog .dialog-edit .dialog-confirm{
  font-size: 24rpx;
  color: #509AFF;
  border: 1rpx solid #509AFF;
  width: 148rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
}

.time-picker{
  width: 100rpx;
  opacity: 1;
}


.item{
  position: relative;
  display: block;
  width: 662rpx;
  background: #509AFF;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 30rpx 0 30rpx 100rpx;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: all ease .3s;
}
.item.detail{
  transition: all ease .3s;
  white-space: pre-wrap;
  word-break:break-all;
}
.item .checkbox{
  display: block;
  content: '';
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  left:  8rpx;
  top: 50%;
  border: 20rpx solid #509AFF;
  transform: translateY(-50%);
  background-color: #fff;
}
.item.overdue{
  background: #fff;
  color: #d3d3d3;
  text-decoration: line-through;
  white-space: nowrap;
  border: 1px solid #d3d3d3;
}
.item.overdue .checkbox{
  border-color: #fff;
  background-color: #d3d3d3;
}

.edit-control-wrapper{
  width: 662rpx;
  animation: heightOut ease .3s forwards;
  margin-bottom: 10rpx;
}
.edit-control-wrapper.active{
  width: 662rpx;
  animation: heightIn ease .3s forwards;
}

@keyframes heightIn{
  0%{
    height: 0rpx;
    opacity: 0;
  }
  100% {
    height: 90rpx;
    opacity: 1;
  }

}
@keyframes heightOut{
  0% {
    height: 90rpx;
    display: block;
    opacity: 1;
  }
  100% {
    height: 0rpx;
    display: none;
    opacity: 0;
  }

}

.edit-control{
  width: 662rpx;
  height: 90rpx;
  background: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
  border: 1px solid #c5c0c0;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.edit-control::after{
  content: '';
  display: block;
  position: absolute;
  background-color: #c5c0c0;
  width: 1rpx;
  height: 48rpx;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}
.edit-wrapper, .del-wrapper{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;

}
.edit-wrapper .text, .del-wrapper .text{
  font-size: 23rpx;
  color: #509AFF;
  margin-right: 24rpx;
}
.edit-wrapper .icon-edit, .del-wrapper .icon-del{
  width: 38rpx;
  height: 38rpx;
}

